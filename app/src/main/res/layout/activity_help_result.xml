            android:src="@drawable/ic_check_24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView8"/>


        <TextView
            android:layout_width="@dimen/help_text_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/help_result_text_margin"
            android:layout_marginTop="@dimen/help_result_margin_default"
            android:text="@string/cd_accept_changes_button"
            android:textSize="@dimen/help_result_text_size"

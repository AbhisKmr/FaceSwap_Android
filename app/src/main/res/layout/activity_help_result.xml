    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/help_result_margin_start_default"
            android:layout_marginTop="8dp"
            android:text="@string/action_settings"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/help_top_text_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/shareIcon"
            android:layout_width="@dimen/help_result_icon_size"
            android:layout_height="@dimen/help_result_icon_size"
            android:layout_marginStart="@dimen/help_result_margin_start_default"
            android:layout_marginTop="@dimen/help_result_margin_default"
            android:contentDescription="@string/button_share_image_help_text"
            android:src="@drawable/ic_share_24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/help_result_icon_size"
            android:layout_height="@dimen/help_result_icon_size"
            android:layout_marginStart="@dimen/help_result_margin_start_default"
            android:layout_marginTop="@dimen/help_result_margin_default"
            android:contentDescription="@string/button_save_text"
            android:src="@drawable/ic_save_24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shareIcon"/>

        <TextView
            android:id="@+id/shareIconText"
            android:layout_width="@dimen/help_text_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/help_result_text_margin"
            android:layout_marginTop="@dimen/help_result_margin_default"
            android:text="@string/button_share_image_help_text"
            android:textSize="@dimen/help_result_text_size"
            app:layout_constraintLeft_toRightOf="@+id/shareIcon"
            app:layout_constraintTop_toBottomOf="@+id/textView7"/>

        <TextView
